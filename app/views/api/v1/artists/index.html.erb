<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Artist  name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.artist_name %></td>
        <td><%= link_to 'Show', api_v1_artist_path(artist) %></td>
        <td><%= link_to 'Edit', edit_api_v1_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', api_v1_artist_path(artist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_api_v1_artist_path %>
