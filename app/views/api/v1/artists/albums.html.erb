<p id="notice"><%= notice %></p>

<h1>Albums of <%= @artist.artist_name %></h1>

<table>
  <thead>
    <tr>
      <th>Artist  name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist_albums.each do |album| %>
      <tr>
        <td><%= album.album_name %></td>
        <td><%= link_to 'Show', api_v1_album_path(album) %></td>
        <td><%= link_to 'Edit', edit_api_v1_album_path(album) %></td>
        <td><%= link_to 'Destroy', api_v1_album_path(album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_api_v1_album_path %>
