<p id="notice"><%= notice %></p>

<h1>Songs of <%= @artist.artist_name %></h1>

<table>
  <thead>
    <tr>
      <th>Artist  name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist_songs.each do |song| %>
      <tr>
        <td><%= song.song_name %></td>
        <td><%= link_to 'Show', api_v1_song_path(song) %></td>
        <td><%= link_to 'Edit', edit_api_v1_song_path(song) %></td>
        <td><%= link_to 'Destroy', api_v1_song_path(song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_api_v1_song_path %>
